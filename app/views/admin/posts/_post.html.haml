%tr
  %td= post.title
  %td= post.author
  %td= post.created_at.strftime('%m/%d/%Y')
  %td= post.updated_at.strftime('%m/%d/%Y')
  %td
    %a{href: edit_admin_post_path(post), class: 'btn'}
      %i.icon-pencil
      Edit
    %a{href: admin_post_path(post), 'data-method' => :delete, 'data-confirm' => "Are you sure you want to delete '#{post.title}'?", class: 'btn'}
      %i.icon-remove
      Delete