%tr
  %td= email.name
  %td= email.email
  %td= email.created_at.strftime('%m/%d/%Y')
  %td
    %a{href: admin_email_path(email), class: 'btn btn-mini'}
      %i.icon-eye-open
      View
    %a{href: edit_admin_email_path(email), class: 'btn btn-mini'}
      %i.icon-pencil
      Edit
    %a{href: admin_email_path(email), 'data-method' => :delete, 'data-confirm' => "Are you sure you want to remote '#{email.email}'?", class: 'btn btn-mini'}
      %i.icon-remove
      Delete