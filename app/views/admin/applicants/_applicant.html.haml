%tr
  %td= applicant.name
  %td= applicant.email
  %td= applicant.created_at.strftime('%m/%d/%Y')
  %td
    %a{href: admin_applicant_path(applicant), class: 'btn btn-mini'}
      %i.icon-eye-open
      View
    %a{href: edit_admin_applicant_path(applicant), class: 'btn btn-mini'}
      %i.icon-pencil
      Edit
    %a{href: admin_applicant_path(applicant), 'data-method' => :delete, 'data-confirm' => "Are you sure you want to remove '#{applicant.email}'?", class: 'btn btn-mini'}
      %i.icon-remove
      Delete