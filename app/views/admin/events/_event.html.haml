%tr
  %td= event.title
  %td= event.author
  %td= event.created_at.strftime('%m/%d/%Y')
  %td= event.updated_at.strftime('%m/%d/%Y')
  %td
    %a{href: edit_admin_event_path(event), class: 'btn'}
      %i.icon-pencil
      Edit
    %a{href: admin_event_path(event), 'data-method' => :delete, 'data-confirm' => "Are you sure you want to delete '#{event.title}'?", class: 'btn'}
      %i.icon-remove
      Delete