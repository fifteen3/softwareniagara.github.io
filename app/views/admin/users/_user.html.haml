%tr
  %td= user.name
  %td= link_to user.email, "mailto:#{user.email}"
  %td= user.created_at.strftime('%b %d, %Y')
  %td
    %a{href: admin_user_path(user), class: 'btn btn-mini'}
      %i.icon-eye-open
      View
    %a{href: edit_admin_user_path(user), class: 'btn btn-mini'}
      %i.icon-pencil
      Edit
    %a{href: admin_user_path(user), class: 'btn btn-mini', data: {method: :delete, confirm: "Are you sure you want to delete #{user.email}?"}}
      %i.icon-remove
      Delete