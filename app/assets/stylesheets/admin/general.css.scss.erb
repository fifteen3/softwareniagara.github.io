@import 'bootstrap/mixins';

$primaryColor: #0083D0;
$headingColor: #DEDEDE;

body {
    background: #efefef url(<%= asset_path 'admin/bg.png' %>) top left repeat;
}

a {
    color: lighten($primaryColor, 15%);

    &:hover {
        color: lighten($primaryColor, 5%);
    }
}

.navbar {
    .navbar-inner {
        @include gradient-vertical(lighten($primaryColor, 10%), $primaryColor);

        a.brand {
            color: darken($primaryColor, 15%);
            text-shadow: 0 1px 0 rgba(255, 255, 255, 0.15);
        }

        ul.nav {
            li {
                a {
                    color: darken($primaryColor, 15%);
                    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.15);
                }

                &.divider-vertical {
                    background-color: darken($primaryColor, 5%);
                    border-color: lighten($primaryColor, 10%);
                }
            }
        }
    }
}

.well {
    background-color: #FAFAFA;
}

table.table {
    border-top-color: darken($headingColor, 5%);
    border-right-color: darken($headingColor, 5%);
    border-left-color: darken($headingColor, 5%);
    border-bottom-color: darken($headingColor, 5%);

    tr {
        &:hover {
            background-color: lighten($headingColor, 15%);
        }

        th {
            @include gradient-vertical(lighten($headingColor, 10%), $headingColor);
            border-left-color: darken($headingColor, 5%);
            color: darken(#DEDEDE, 25%);
            text-shadow: 0 1px 0 #fff;
            font-weight: normal;
        }
    
        td {
            vertical-align: middle;
        }
    }
}

.form-actions {
    border-top: 0px solid transparent;
    background-color: transparent !important;
    padding: 0 !important;
}

.breadcrumbs {
    @include gradient-vertical(#FDFDFD, #DEDEDE);
    margin: 0 -20px;
    margin-bottom: 30px;
    @include border-radius(6px);
    @include box-shadow(0 0px 3px rgba(0, 0, 0, 0.15));
    border: 1px solid darken(#DEDEDE, 5%);

    ul {
        margin: 0;
        padding: 0;

        li {
            position: relative;
            margin: 0;
            padding: 0;
            display: inline;
            clear: left;

            a {
                margin: 0;
                display: block;
                padding: 10px 20px;
                float: left;
                color: darken(#DEDEDE, 25%);
                text-shadow: 0 1px 0 #fff;

                &:hover {
                    color: lighten($primaryColor, 5%);
                    text-decoration: none;
                }

                &:last-child {
                    @include border-radius(0 75px 75px 0);
                }
            }

            .point {
                position: absolute;
                top: 5px;
                right: 0;
                height: 27px;
                width: 27px;
                @include rotate(45deg);
                @include box-shadow(1px 0px 1px rgba(255, 255, 255, 0.35));
                border-right: 1px solid darken(#DEDEDE, 5%);
                border-top: 1px solid darken(#DEDEDE, 5%);
            }
        }
    }
}

.content {
    background: #fff;
    padding: 20px;
    margin: 0 -20px;
    @include border-radius(6px);
    @include box-shadow(0 1px 2px rgba(0, 0, 0, 0.15));
}