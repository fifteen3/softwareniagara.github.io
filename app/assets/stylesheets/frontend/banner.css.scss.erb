@import 'bootstrap/mixins';

#banner {
    width: 100%;
    padding: 120px 0;
    padding-top: 220px;
    margin-top: -90px;
    margin-bottom: 20px;
    background: transparent url(<%= asset_path 'frontend/banner_demo.jpg' %>) bottom center no-repeat;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -ms-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    border-bottom: 15px solid rgba(0, 0, 0, 0.15);

    .well {
        background-color: rgba(0, 0, 0, 0.75);

        h1, h2, h3, h4, h5, h6 {
            font-weight: 300;
            color: rgba(255, 255, 255, 0.85);
            text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.5);
            padding-bottom: 10px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.9);
            margin-bottom: 18px;
            @include box-shadow(0 1px 0 rgba(255, 255, 255, 0.15));
        }
    
        p, p.lead {
            tex-shadow: 0 -1px rgba(0, 0, 0, 0.75);
            color: rgba(255, 255, 255, 0.75);
        }
    
        p {
            color: #aeaeae;
        }
    }
}

@media (max-width: 979px) {
    #banner {
        margin-top: 0;
    }
}

@media (max-width: 767px) {
    #banner {
        padding-bottom: 0;
        margin-bottom: 30px;

        .well {
            margin-bottom: 0;
            @include border-radius(0);
        }
    }
}