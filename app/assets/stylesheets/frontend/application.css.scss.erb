// Set the correct sprite paths
$iconSpritePath: asset-url('glyphicons-halflings.png', image);
$iconWhiteSpritePath: asset-url('glyphicons-halflings-white.png', image);
@import "bootstrap";
@import "bootstrap-responsive";
@import "bootstrap/mixins";

body {
    padding-top: 90px;
    background: #f5f5f5 url(<%= asset_path 'admin/bg.png' %>) top left repeat;
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Ubuntu', 'Helvetica Neue', 'Arial', 'Helvetica', sans-serif;
  color: #53A853;
}

.alert {
    h1, h2, h3, h4, h5, h6 {
        color: #262626;
    }

    &.alert-error {
        h1, h2, h3, h4, h5, h6 {
            color: #B94A5C;
        }
    }
}

.page-header {
    h1 {
        color: #53A853;
        font-weight: 300;
    }
}

form {
    .field_with_errors {
        label {
            color: #B94A5C;
        }

        input {
            border-color: #B94A5C;
        }
    }

    .form-actions {
        padding-top: 20px;
    }
}

.content {
    background-color: rgba(255, 255, 255, 0.75);
    padding: 20px;
    margin: 0 -20px; /* negative indent the amount of the padding to maintain the grid system */
    @include border-radius(3px);
    @include box-shadow(0 0 3px rgba(0, 0, 0, 0.25));
    margin-bottom: 30px;
}

@media (max-width: 979px) {
    body {
        padding-top: 0 !important;
    }
}

@media (max-width: 767px) {
    .content {
        background-color: transparent;
        @include border-radius(0);
        @include box-shadow(0 0 0 rgba(0, 0, 0, 0));
    }
}
