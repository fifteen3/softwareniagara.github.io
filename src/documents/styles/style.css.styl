brandColor = #00AAC8
accentColor = #D5219D
logoFont = 'Charcoal CY', 'Helvetica Neueu', 'Arial', 'Helvetica', san-serif
headFont = 'Open Sans Condensed', sans-serif

body
	background white url('/graphics/bg.png') top left repeat
	padding-top 60px

h1, h2, h3, h4, h5, h6
	font-family headFont
	font-weight 400

h2
	border-bottom 1px dotted #262626
	padding-bottom 10px

a, a:link
	cursor pointer

/* --------------------------------------------
 * Components
 * -------------------------------------------- */

.button
	background-color accentColor
	border-color darken(accentColor, 5%)
	text-shadow 0 -1px darken(accentColor, 5%)
	&:hover
		background-color lighten(accentColor, 5%)

.top-bar,
.top-bar ul > li.name h1 a,
.top-bar ul > li.has-dropdown a
	height 60px
	line-height 60px

.top-bar ul > li.name h1 a
		background transparent url('/graphics/symbol.png') 15px center no-repeat
		font-family logoFont
		color white
		padding-left 105px
		text-shadow 0 -1px black

		span.location
			color brandColor

.top-bar ul > li.has-dropdown a
		padding-right 15px

		&::after
			display none


ul.breadcrumbs
	padding 15px 25px
	border none
	background brandColor
	border-radius 0
	margin 0 -25px
	margin-bottom 20px		

	li:before
		color darken(brandColor, 10%)

	li a
		color white	

/* --------------------------------------------
 * Layout
 * -------------------------------------------- */

.main .container
	background white
	width 960px
	margin 30px auto
	box-shadow 0 0 6px rgba(0, 0, 0, 0.15)

.panel h5
	margin-top 0
	margin-bottom 10px

.panel i
	color #CDCDCD

section.event-meta
	margin-bottom 30px

.footer.container
	background white
	width 960px
	margin 30px auto
	margin-top 0
	padding 20px 0
	box-shadow 0 0 6px rgba(0, 0, 0, 0.15)
	border-bottom 10px solid brandColor

	.logo
		height 80px
		width 138px

	.credits
		font-size 13px
		text-align right 
		margin-bottom 0

	.social.link-list
		margin-bottom 0

		li i
			font-size 48px

		li a
			color accentColor

			&:hover
				color lighten(accentColor, 5%)