/* -----------------------------------------
   Variable Declarations
-------------------------------------------*/
primaryBackgroundColor   = #FFFFFF;
secondaryBackgroundColor = #E6EDF2;
tertiaryBackgroundColor  = #205081; 
quarterlyBackgroundColor = #252931;
secondaryColor = #e9e9e9;
highlightColor = #FFF995;
primaryColor = #01ABC5;
accentColor = #2D456E;
textColor = #262626;
errorColor = #C60F14;
successColor = #5DA423;
buttonColor = primaryColor;
secondaryButtonColor = secondaryBackgroundColor;

/* -----------------------------------------
   Shared Styles
----------------------------------------- */

body {
  background-color: lighten(quarterlyBackgroundColor, 5%);
  padding-top: 0 !important;
}

a {
  transition: .3s color linear;
}

.button {
  background-color: buttonColor;
  border-color: darken(buttonColor, 5%);
  box-shadow: none;

  &:hover {
    background-color: darken(buttonColor, 10%);
  }

  &.secondary {
    background-color: secondaryButtonColor;
    border-color: darken(secondaryButtonColor, 5%);

    &:hover {
      background-color: darken(secondaryButtonColor, 10%);
    }
  }
}

ul {
  list-style: none;
}

// HEADING ELEMENTS

h1, h2, h3, h4, h5, h6 {
  color: tertiaryBackgroundColor;
}

h1, h2, h3, h4 {
  font-weight: normal;
}

.page-title,
.sub-title {
  padding-bottom: 20px;
  border-bottom: 1px solid secondaryColor;
}

.sub-title {
  padding-top: 20px;
  border-top: 1px solid secondaryColor;
}

// FORM ELEMENTS

form textarea {
  height: 400px;
}

form .parsley-error {
  border-color: errorColor;
}

form .parsley-error-list {
  list-style: none;
  color: errorColor;
}

// TOPBAR
.fixed,
.top-bar {
  background-color: tertiaryBackgroundColor;
}

.fixed {
  border-bottom: 1px solid darken(tertiaryBackgroundColor, 35%);
  box-shadow: 0 2px 2px rgba(tertiaryBackgroundColor, .5);
}

.top-bar ul > li,
.top-bar ul > li:not(.name) {
  &:hover,
  a:hover,
  a:focus,
  a.active {
    background-color: transparent;
    color: primaryColor;
  }
}

// HEADER
#header {
  .name {
    float: left;

    h1 {
      font-size: 1em;
    }

    a {
      display: block;
      background: transparent url('../images/logo.png') center center no-repeat;
      background-size: 100%;
      height: 7em;
      width: 11em;
      text-indent: -9999em;
      overflow: hidden;
    }
  }

  li {
    float: left;
  }

  section {
    ul {
      padding: 2.75em 0;
    }

    li {
      font-size: 1.5em;
      margin-left: 2em;

      a {
        display: block;
        float: left;
        color: white;

        &:hover {
          color: primaryColor;
        }
      }
    }
  }
}

.svg #header .name a {
  background-image: url('../images/logo.svg');
}

// WRAPPER
.wrapper {
  background: secondaryBackgroundColor url('../images/banner.png') top left repeat-x;
  position: relative;
  padding-top: 3em;
}

// MAIN
#main {
	background-color: white;
	padding: 2em;
	border-radius: .5em;
	box-shadow: 0 0 6px rgba(tertiaryBackgroundColor, .25);
	margin-bottom: 3em;
}

// FOOTER
#footer {
	background-color: quarterlyBackgroundColor;
	color: secondaryBackgroundColor;
	border-bottom: 1px solid lighten(quarterlyBackgroundColor, 5%);

	h1, h2, h3, h4, h5 {
		color: white;
	}

  .social-networks {
    margin-top: 1.3em;

    li {
      display: inline;
      padding: 0 .5em;
    }

    a {
      box-shadow: 0 0 3px rgba(0,0,0,.25);
      width: 2em;
      height: 2em;
    }
  }
}

// CONTENTINFO
#contentinfo {
	background-color: lighten(quarterlyBackgroundColor, 5%);
	padding: 1.5em 0;
	color: lighten(quarterlyBackgroundColor, 25%);
	text-align: center;
	box-shadow: inset 0 3px 6px rgba(quarterlyBackgroundColor, .75);

	small {
		font-size: .9em;
	}
}

.reveal-modal {
	z-index: 999999;
}

/* -----------------------------------------
   Home Page
----------------------------------------- */
.promo {
  margin-top: -2.1em;
  margin-left: -2em;
  margin-right: -2em;
  padding: 2em;
  border-radius: .5em .5em 0 0;
  background-color: #FFFBD1;
  border-top: none;
  border-left: none;
  border-right: none;
  border-bottom-color: darken(#FFFBD1, 10%);
}

.accent {
  background-color: secondaryBackgroundColor;
  font-size: 5em;
  padding-top: .5em;
  padding-bottom: .5em; 
  text-align: center;
  color: tertiaryBackgroundColor;
}

/* -----------------------------------------
   About Page
----------------------------------------- */
.organizers {
	list-style: none;

  .avatar {
    background-position: center center;
    background-size: 100%;
    background-repeat: no-repeat;
    width: 4.8125em;
    height: 4.8125em;
    float: left;
    margin: 1em;
    border-radius: 2.40625em;
  }

  .content {
    float: left;
  }

  dd {
    margin-bottom: .5em;
  }
}

/* -----------------------------------------
   Contact Page
----------------------------------------- */
.social-networks.enclosed {
	li {
		margin-bottom: 1em;
	}

	i {
		background: primaryColor;
		color: secondaryBackgroundColor;
		font-size: 1em;
		padding: .5em;
		border-radius: 1em;
		vertical-align: top;
		margin-right: .5em;
	}

	a:hover i {
		background: darken(primaryColor, 5%);
	}
}

/* -----------------------------------------
   Responsive
----------------------------------------- */
@media only screen and (max-width: 767px) {
  // HEADER
  #header {
    text-align: center;

    .name {
      width: 100%;
      text-align: center;

      a {
        background-image: url('../images/logo-inverse.png');
        margin-left: auto;
        margin-right: auto;
      }
    }
  }

  .svg #header .name a {
    background-image: url('../images/logo-inverse.svg');
  }

  // WRAPPER
  .wrapper {
    background-color: white;
    background-image: none;
  }

  // MAIN
  #main {
    border-radius: 0;
    box-shadow: none;
    padding: 0;
  }

  // HOME PAGE
  .promo {
    margin-top: 0;
    margin-left: 0;
    margin-right: 0;
    border-bottom: none;
    border-radius: 0 0 0 0;
    background-color: transparent;
    padding: 0;
  }

  .accent {
    display: none;
  }
}

